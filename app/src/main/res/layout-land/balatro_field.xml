<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:padding="5dp"
    tools:ignore="MissingDefaultResource">

    <!-- LEFT PANEL -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:paddingStart="0dp"
        android:paddingEnd="5dp">

        <!-- NAME -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="#263238" />

        <LinearLayout
            android:id="@+id/blind_container"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <!-- Top 35% - Boss Text -->
            <TextView
                android:id="@+id/boss_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="Boss Text"
                android:textColor="#263238"
                android:textSize="14sp" />

            <!-- Bottom 65% - Split into Left & Right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.5"
                android:orientation="horizontal">

                <!-- Left 30% - Image -->
                <ImageView
                    android:id="@+id/blind_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/ic_launcher_background" />

                <!-- Right 70% - Splitting into Three Parts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <!-- Top 30% - Score at least -->
                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Score at least"
                        android:textColor="#263238"
                        android:textSize="12sp" />

                    <!-- Middle 40% - Chips -->
                    <TextView
                        android:id="@+id/chipsNeeded"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="CHIPS"
                        android:textColor="#263238"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Bottom 30% - Reward -->
                    <TextView
                        android:id="@+id/reward_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Reward:"
                        android:textColor="#263238"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ROUND SCORE -->
        <TextView
            android:id="@+id/round_score"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="0"
            android:textColor="#263238" />

        <!-- CURRENT SCORE -->
        <TextView
            android:id="@+id/current_score"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#263238" />

        <!-- CHIPS, X, MULTI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <!-- Chips aligned to the right -->
            <TextView
                android:id="@+id/chips"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:background="@android:color/darker_gray"
                android:gravity="center|end"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="#263238" />

            <!-- X centered -->
            <TextView
                android:id="@+id/x"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="#263238" />

            <!-- Multi aligned to the left -->
            <TextView
                android:id="@+id/mult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/darker_gray"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="#263238" />
        </LinearLayout>

        <!-- Remaining Area Split -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Left (35%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/run_info"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/run_info"
                    android:textColor="#263238" />

                <TextView
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/options"
                    android:textColor="#263238" />
            </LinearLayout>

            <!-- Right (65%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:orientation="vertical">

                <!-- Row 1: HANDS and DISCARDS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/hands"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/hands"
                        android:textColor="#263238"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/discards"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/discards"
                        android:textColor="#263238" />
                </LinearLayout>

                <!-- Row 2: GOLD -->
                <TextView
                    android:id="@+id/gold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/gold"
                    android:textColor="#263238" />

                <!-- Row 3: ANTE and ROUND -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ante"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/ante"
                        android:textColor="#263238"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/round"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/round"
                        android:textColor="#263238" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_panel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.35"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/jokers"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/jokers"
            android:textColor="#263238" />

        <TextView
            android:id="@+id/consumables"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/consumables"
            android:textColor="#263238"
            tools:ignore="VisualLintBounds" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bottom_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_panel"
        app:layout_constraintTop_toBottomOf="@id/right_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Changed from FrameLayout to LinearLayout -->
        <LinearLayout
            android:id="@+id/hand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="9"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:padding="10dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                android:background="#D32F2F"
                android:gravity="center"
                android:text="@string/play"
                android:textColor="#263238"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:id="@+id/middle_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                tools:ignore="VisualLintBounds">

                <TextView
                    android:id="@+id/sort_hand_label"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/sort_hand"
                    android:textColor="#263238" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <Button
                        android:id="@+id/rank"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="#FFA000"
                        android:gravity="center"
                        android:text="@string/rank"
                        android:textColor="#263238" />

                    <Button
                        android:id="@+id/suit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFA000"
                        android:gravity="center"
                        android:text="@string/suit"
                        android:textColor="#263238"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/discard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                android:background="#D32F2F"
                android:gravity="center"
                android:text="@string/discard"
                android:textColor="#263238"
                tools:ignore="VisualLintBounds" />

            <LinearLayout
                android:id="@+id/deck_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deck"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/deck_size"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="52/52"
                    android:textColor="#263238" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>