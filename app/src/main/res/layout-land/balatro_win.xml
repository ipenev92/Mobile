<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:padding="5dp"
    tools:ignore="MissingDefaultResource">

    <!-- LEFT PANEL -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:paddingStart="0dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/blind"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#263238" />

        <!-- ROUND SCORE -->
        <TextView
            android:id="@+id/round_score"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#263238" />

        <!-- CURRENT SCORE -->
        <TextView
            android:id="@+id/current_score"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#263238" />

        <!-- CHIPS, X, MULTI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <!-- Chips aligned to the right -->
            <TextView
                android:id="@+id/chips"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:background="@android:color/darker_gray"
                android:gravity="center|end"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="#263238" />

            <!-- X centered -->
            <TextView
                android:id="@+id/x"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="#263238" />

            <!-- Multi aligned to the left -->
            <TextView
                android:id="@+id/mult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@android:color/darker_gray"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="#263238" />
        </LinearLayout>

        <!-- Remaining Area Split -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Left (35%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/run_info"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/run_info"
                    android:textColor="#263238" />

                <TextView
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/options"
                    android:textColor="#263238" />
            </LinearLayout>

            <!-- Right (65%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:orientation="vertical">

                <!-- Row 1: HANDS and DISCARDS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/hands"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/hands"
                        android:textColor="#263238"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/discards"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/discards"
                        android:textColor="#263238" />
                </LinearLayout>

                <!-- Row 2: GOLD -->
                <TextView
                    android:id="@+id/gold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/gold"
                    android:textColor="#263238" />

                <!-- Row 3: ANTE and ROUND -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ante"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/ante"
                        android:textColor="#263238"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/round"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@string/round"
                        android:textColor="#263238" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_panel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.35"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/jokers_owned"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/jokers_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/consumables_owned"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/consumables_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bottom_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_panel"
        app:layout_constraintTop_toBottomOf="@id/right_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Left Section (Remaining Space) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@android:color/darker_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Empty space to center the button -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="#673AB7"
                    android:text=""
                    android:textColor="#FFFFFF" />

                <!-- Empty space to center the button -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/blind_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/blind_chips"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/blind_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/gold_gained"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="top|start"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#263238"
                    android:background="@android:color/darker_gray"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/hand_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="end|top"
                    android:text="R"
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Rightmost Section (Deck Container) -->
        <LinearLayout
            android:id="@+id/deck_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deck"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/deck_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="52/52"
                android:textSize="14sp"
                android:textColor="#263238" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>